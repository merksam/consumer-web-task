{
  "name": "version3-frontend-prototype",
  "version": "0.0.1",
  "description": "A prototype of Version 3 customer-facing frontend for Takeaway.com.",
  "main": "./src/server/index.js",
  "scripts": {
    "build-dev-server": "npm run clean && webpack --config ./tools/build/webpack.config.js",
    "build-prod-server": "npm run clean && cross-env NODE_ENV=production webpack --config ./tools/build/webpack.config.js",
    "dev": "npm run build-dev-server && nodemon ./build/server.js",
    "build": "npm run build-prod-server && next build ./src",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "clean": "rimraf ./build",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:js": "eslint src/**/*.{js,jsx}",
    "lint:styles": "stylelint src/**/*.{css,scss,sass}",
    "fix": "prettier --write src/**/*.{js,jsx,json,css,scss,sass,md,yml,yaml}"
  },
  "engines": {
    "node": "^12.2.0",
    "npm": "^6.9.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not ie <= 11",
    "not ie_mob <= 11",
    "safari > 9",
    "opera >= 44",
    "not op_mini all",
    "edge >= 12"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    },
    "env": {
      "browser": true,
      "jest": true
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss,sass,md,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@zeit/next-sass": "1.0.1",
    "connect-locale": "1.3.3",
    "cookie-parser": "1.4.4",
    "cross-env": "5.2.0",
    "exenv": "1.2.2",
    "express": "4.16.4",
    "graphql": "^14.0.0",
    "hoist-non-react-statics": "3.3.0",
    "intl": "1.2.5",
    "intl-locales-supported": "1.0.0",
    "isomorphic-unfetch": "^3.0.0",
    "lint-staged": "8.1.7",
    "lodash": "4.17.15",
    "next": "8.1.0",
    "next-routes": "1.4.2",
    "node-sass": "4.12.0",
    "react": "16.8.6",
    "react-apollo": "^2.5.6",
    "react-dom": "16.8.6",
    "react-intl": "2.8.0",
    "react-modal": "3.11.1",
    "react-redux": "7.0.3",
    "react-responsive": "8.0.1",
    "redux": "4.0.1",
    "redux-saga": "1.0.2",
    "rimraf": "2.6.3",
    "universal-cookie": "4.0.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.4.5",
    "babel-eslint": "10.0.1",
    "clsx": "1.0.4",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.11.0",
    "husky": "2.3.0",
    "nodemon": "1.19.4",
    "postcss-custom-properties": "8.0.10",
    "prettier": "1.17.1",
    "prop-types": "^15.7.2",
    "sass-resources-loader": "2.0.1",
    "stylelint": "10.0.1",
    "stylelint-prettier": "1.1.0",
    "webpack-cli": "3.3.2",
    "webpack-node-externals": "1.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/banderror/version3-frontend-prototype.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/banderror/version3-frontend-prototype#readme"
}
